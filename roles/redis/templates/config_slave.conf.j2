bind {{ ansible_default_ipv4.address }} 127.0.0.1
port {{ port_slave }}
pidfile /var/run/redis_{{ port_slave }}.pid
unixsocket /var/run/redis_{{ port_slave }}.sock
unixsocketperm 755
loglevel notice
logfile {{ dir_log }}/redis_{{ port_slave }}.log
dbfilename dump.rdb
dir {{ dir_data }}/{{ port_slave }}
appendonly yes

cluster-enabled yes
cluster-config-file nodes.conf
cluster-node-timeout 5000
